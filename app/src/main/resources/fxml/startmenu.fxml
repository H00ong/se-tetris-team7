<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.tetris.menu.start.controller.StartMenuController"
    prefWidth="800" prefHeight="600"
    stylesheets="@../css/buttonFocus.css">

    <!-- 제목: 상단에 고정, 좌우 중앙 정렬 -->
    <Label fx:id="titleLabel" text="Tetris"
           AnchorPane.topAnchor="24.0"
           AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0"
           style="-fx-alignment: center;"/>

    <!-- 메뉴 버튼: 화면 중단에 배치 (topAnchor 값으로 미세 조정) -->
    <VBox fx:id="menuBox" spacing="40" alignment="CENTER"
          AnchorPane.topAnchor="180.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">
        <Button fx:id="gameStartButton" text="게임 시작" onAction="#onGameStart" prefWidth="200" prefHeight="50"/>
        <Button fx:id="settingButton" text="설정" onAction="#onSettings" prefWidth="200" prefHeight="50" />
        <Button fx:id="exitButton" text="종료" onAction="#onExit" prefWidth="200" prefHeight="50" />
    </VBox>

</AnchorPane>
